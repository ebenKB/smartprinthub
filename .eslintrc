{
  "parser" : "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks"
  ],
  "rules" : {
    "react/boolean-prop-naming" : [
      "error",
      {
        "validateNested": true
      }
    ],
    "react/jsx-indent" : [
      1, 'tab',
      {
        "checkAttributes": true,
        "indentLogicalExpressions": true
      }
    ],
    "no-tabs": 0,
    "react/jsx-indent-props": [1, 'tab'],
  }
}